{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "lib": ["dom", "es6", "es2015", "es2016"],
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__/*", "babel.config.js", "jest.config.js"]
}